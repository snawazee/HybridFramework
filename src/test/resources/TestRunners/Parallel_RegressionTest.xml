<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="linkedin App Regression Test Suite">

	<listeners>

		<listener class-name="com.qa.linkedin.Listeners.pdfListener" />
		<listener class-name="com.qa.linkedin.Listeners.ExtentReportListener" />
		<listener class-name="com.qa.linkedin.Listeners.TestAllureListener" />
		<listener class-name="com.qa.linkedin.Listeners.TesultsListener" /> 
		<listener class-name="com.qa.linkedin.Listeners.ScreenshotListener" />

	</listeners>

	<test name="Hub Spot Functional Regression Test - FF" thread-count="3" parallel="classes"> <parameter name="browser" value="firefox" />

		<classes>
			<class name="com.qa.linkedin.Tests.LoginPageTest" />
			<class name="com.qa.linkedin.Tests.HomePageTest" />
			<class name="com.qa.linkedin.Tests.ContactsPageTest" />
		</classes>
	</test>
	
	<test name="Hub Spot Functional Regression Test - chrome" thread-count="3" parallel="classes"> <parameter name="browser" value="chrome" />
	
		<classes>
			<class name="com.qa.linkedin.Tests.LoginPageTest" />
			<class name="com.qa.linkedin.Tests.HomePageTest" />
			<class name="com.qa.linkedin.Tests.ContactsPageTest" />
		</classes>
	</test>
</suite> 
